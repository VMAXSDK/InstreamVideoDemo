<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:paddingBottom="4dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:id="@+id/video_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView

                        android:text="The astounding athletic power of quadcopters | Raffaello D'Andrea"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView" />

                    <TextView

                        android:text="16:08 min"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="TED Talks"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/video_2"
                android:layout_below="@id/video_1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img1"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Rodney Brooks: Why we will rely on robots"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="9:56 min"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="TED Talks"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>





            <RelativeLayout
                android:id="@+id/video_3"
                android:layout_below="@id/video_2"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img3"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Inventing the Impossible: Pablos Holman at TEDxUCSD"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="16:48 min"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="TED Talks"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/video_4"
                android:layout_below="@id/video_3"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img4"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Imaging at a trillion frames per second | Ramesh Raskar"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="11:02 min"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="TED Talks"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/video_5"
                android:layout_below="@id/video_4"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/img5"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView


                        android:src="@drawable/play_button"
                        android:layout_width="140dp"
                        android:layout_height="86dp" />
                </LinearLayout>
                <LinearLayout

                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/img5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView

                        android:text="Bastian Schaefer: A 3D-printed jumbo jet?"
                        android:layout_margin="3dp"
                        android:textSize="14dp"
                        android:textColor="@color/initial_font_gotham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:text="5:58 min"
                        android:layout_margin="3dp"
                        android:textSize="8dp"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView

                        android:textStyle="italic"
                        android:text="TED Talks"
                        android:layout_margin="3dp"
                        android:textSize="16px"
                        android:textColor="@color/blog_descp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </RelativeLayout>








        </LinearLayout>

    </ScrollView>
</RelativeLayout>